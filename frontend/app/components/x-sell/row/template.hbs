{{#if isEditting}}
  {{x-sell/row/form sell=sell items=items}}
  <td class="text-right">
    <button class="delete btn btn-danger btn-xs" {{action "delete" on="doubleClick"}}>
      {{fa-icon 'times'}}
    </button>
    <button class="btn btn-success btn-xs" {{action 'update'}}>
      {{fa-icon 'check'}}
    </button>
  </td>
{{else}}
  <td>{{sell.item.name}}</td>
  <td class="text-right">{{sell.count}}</td>
  <td class="text-right">{{x-item/price value=sell.price}}</td>
  <td class="text-right">{{x-sell/sum sell=sell}}</td>
  <td class="text-right">
    <button {{action "edit"}} class="btn btn-default btn-xs">
      {{#if sell.isDirty}}
        {{fa-icon 'clock-o'}}
      {{else}}
        {{fa-icon 'pencil'}}
      {{/if}}
    </button>
  </td>
{{/if}}
