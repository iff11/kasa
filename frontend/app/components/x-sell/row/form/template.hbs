<td>
  {{#x-item/auto-complete
        selectedValue=sell.item
        options=items
        noMessagePlaceholderText="No item found" as |result|}}
    <p>{{result.name}} - <small>{{result.barcode}}</small></p>
  {{/x-item/auto-complete}}

  {{!view "select"
        value=sell.item
        content=items
        optionValuePath="content"
        optionLabelPath="content.name"
        class="form-control"
        prompt=(t 'sell.select_item')}}
</td>
<td class="text-right">
  <div class="input-group">
    {{input value=sell.price class='form-control text-right' type='number'}}
    <span class="input-group-addon">{{t 'currency'}}</span>
  </div>
</td>
<td class="text-right">
  {{input value=sell.count class='form-control text-right' type='number'}}
</td>
<td class="text-right">
  {{x-sell/sum sell=sell}}
</td>
