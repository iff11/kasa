<td class="col-item-name">
  {{#if isEdit}}
    {{sell.item.name}}
  {{else}}
    {{ember-selectize
        content=items
        optionValuePath="content"
        optionLabelPath="content.scanner_string"
        selection=sell.item
        placeholder="Select an item" }}
  {{/if}}
</td>
<td class="col-item-count">
  {{input value=sell.count class='form-control text-right' type='number'}}
</td>
<td class="col-item-separator">â¨‰</td>
<td class="col-item-price">
  <div class="input-group">
    {{input value=sell.price class='form-control text-right' type='number'}}
    <span class="input-group-addon">{{t 'currency'}}</span>
  </div>
</td>
<td class="col-item-separator">=</td>
<td class="col-item-sum">
  {{x-sell/sum sell=sell}}
</td>
