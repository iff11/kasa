<h2>
  <strong>
    {{attrs.visit.customer.full_name}}
  </strong>
  -
  <small>
    {{date-and-time attrs.visit.date ENV.locale}}
  </small>
</h2>

<div class="row">
  <div class="col-xs-6">
    {{#link-to 'visits' class="btn btn-default"}}
      {{fa-icon 'arrow-left'}}
      {{t 'visit.all_visits'}}
    {{/link-to}}
  </div>

  <div class="col-xs-6 text-right">
    {{#link-to 'visits' class="btn btn-primary"}}
      {{t 'visit.checkout'}}
      {{fa-icon 'shopping-cart'}}
    {{/link-to}}
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <table class="table">
      <thead>
        <tr>
          <th class="col-xs-5">{{t 'sell.item'}}</th>
          <th class="col-xs-2 text-right">{{t 'sell.unit_price'}}</th>
          <th class="col-xs-2 text-right">{{t 'sell.count'}}</th>
          <th class="col-xs-2 text-right">{{t 'sell.sum_price'}}</th>
          <th class="col-xs-1 text-right">{{t 'sell.action'}}</th>
        </tr>
      </thead>

      <tbody>
        {{#each sell in attrs.visit.sells}}
          {{x-sell/row sell=sell items=items update="updateSell" delete="deleteSell"}}
        {{/each}}

        <tr>
          {{x-sell/row/form sell=heap items=items}}
          <td class="text-right">
            <button class="btn btn-success btn-xs" {{action "createSell"}}>
              {{fa-icon 'plus'}}
            </button>
          </td>
        </tr>
      </tbody>

      <tfoot>
        <tr class="info">
          <th colspan="3">
            Total price:
          </th>
          <th class="text-right">
            {{x-visit/total-price visit=attrs.visit}}
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
