<h2 {{bind-attr title=(date-and-time attrs.visit.date ENV.locale)}} class="row">
  <div class="col-xs-5">
    {{fa-icon 'user'}}
    {{attrs.visit.customer.full_name}}
  </div>
  <div class="col-xs-2">
    <img class="avatar img-circle img-thumbnail" {{bind-attr src="attrs.visit.employee.photo_url"}} />
  </div>
  <div class="col-xs-5">
    {{fa-icon 'scissors'}}
    {{attrs.visit.employee.full_name}}
  </div>
</h2>

{{liquid-outlet}}
