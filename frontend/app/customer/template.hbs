{{#with attrs.customer as |c|}}
  <h2>{{c.full_name}}</h2>
  <p class="text-muted">
    {{c.note}}
  </p>

  <dl class="dl-horizontal">
    <dt>{{t "customer.birthday_in"}}</dt>
    <dd>{{x-customer/birthday customer=c}}</dd>
    <dt>{{t "customer.visits_length"}}</dt>
    <dd>{{c.visitsCount}}</dd>
  </dl>

  {{x-customer/visits customerId=attrs.customer.id size=100}}

  <p>...</p>
{{/with}}
