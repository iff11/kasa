{{#with attrs.customer as |c|}}
  <h2>{{c.full_name}}</h2>
  <p class="text-muted">
    {{c.note}}
  </p>

  <dl class="dl-horizontal">
    <dt>{{t "customer.birthday_in"}}</dt>
    <dd>{{x-customer/birthday customer=c}}</dd>
    <dt>{{t "customer.visits_length"}}</dt>
    <dd>{{c.visits_count}}</dd>
  </dl>

  {{x-customer/visits customer=attrs.customer}}
{{/with}}