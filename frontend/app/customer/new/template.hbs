<h2>{{t 'customers.newCustomer'}}</h2>

<div class="row">
  <div class="col-xs-12">
    <div class="form-group">
      <label>{{t 'customer.firstName'}}</label>
      {{input placeholder=(t 'customer.firstName') id="first-name" value=heap.firstName class='form-control'}}
    </div>
    <div class="form-group">
      <label>{{t 'customer.lastName'}}</label>
      {{input placeholder=(t 'customer.lastName') id="last-name" value=heap.lastName class='form-control'}}
    </div>
    <div class="form-group">
      <label>{{t 'customer.note'}}</label>
      {{textarea placeholder=(t 'customer.note') id="note" rows="5" value=heap.note class='form-control'}}
    </div>

    <button class="customer-new-button" {{action 'createCustomer' attrs.customer}}>
      {{fa-icon icon="check"}}
    </button>
  </div>
</div>
