<h2>
  <div class="row">
    <div class="col-xs-6">
      {{t 'customers.all'}}
    </div>

    <div class="col-xs-6 text-right">
      <button class="btn btn-success" {{action 'createCustomer'}}>
        {{fa-icon 'plus-square'}} {{t 'customer.add'}}
      </button>
    </div>
  </div>
</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="xol-xs-1">{{th-sort action="sortBy" title=(t 'customer.visits_length') current=sortBy value='visitsCount'}}</th>
      <th class="xol-xs-1">{{th-sort action="sortBy" title=(t 'customer.lastVisit') current=sortBy value='lastVisit.date'}}</th>
      <th class="col-xs-2">{{th-sort action="sortBy" title=(t 'customer.firstName') current=sortBy value='firstName'}}</th>
      <th class="col-xs-2">{{th-sort action="sortBy" title=(t 'customer.lastName') current=sortBy value='lastName'}}</th>
      <th class="col-xs-2">{{th-sort action="sortBy" title=(t 'customer.birth') current=sortBy value='birth'}}</th>
      <th class="col-xs-1">{{th-sort action="sortBy" title=(t 'customer.phone') current=sortBy value='phone'}}</th>
      <th class="col-xs-2">{{th-sort action="sortBy" title=(t 'customer.mail') current=sortBy value='mail'}}</th>
      <th class="col-xs-1">{{th-sort action="sortBy" title=(t 'customer.note') current=sortBy value='note'}}</th>
      <th class="col-xs-1 text-right">{{t 'customer.action'}}</th>
    </tr>
  </thead>

  <tbody>
    {{#each customersSorted as |customer|}}
      <tr>
        <td>{{customer.visitsCount}}</td>
        <td>{{x-visit/last-visit visit=customer.lastVisit}}</td>
        <td>{{customer.firstName}}</td>
        <td>{{customer.lastName}}</td>
        <td>{{customer.birth}}</td>
        <td>{{customer.phone}}</td>
        <td>{{customer.mail}}</td>
        <td>{{customer.note}}</td>
        <td class="text-right">
          {{#link-to 'admin.customer' customer class='btn btn-default btn-xs'}}
            {{fa-icon 'pencil'}}
          {{/link-to}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
