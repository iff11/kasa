<h2>
  <div class="row">
    <div class="col-xs-6">
      {{t 'items.all'}}
    </div>

    <div class="col-xs-6 text-right">
      {{#link-to 'admin.item.new' class='btn btn-success'}}
        {{t 'item.new'}} {{fa-icon 'plus'}}
      {{/link-to}}
    </div>
  </div>
</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-xs-3">{{t 'item.name'}}</th>
      <th class="col-xs-3 text-right">{{t 'item.unlimited_or_stock'}}</th>
      <th class="col-xs-2 text-right">{{t 'item.selling_price'}}</th>
      <th class="col-xs-2 text-right">{{t 'item.barcode'}}</th>
      <th class="col-xs-1 text-right">{{t 'item.action'}}</th>
    </tr>
  </thead>

  <tbody>
    {{#each item in pagedContent}}
      {{x-item/row item=item update="updateItem" delete="deleteItem"}}
    {{/each}}
  </tbody>
</table>

{{page-numbers content=pagedContent}}
