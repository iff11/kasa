<h2>
  <div class="row">
    <div class="col-xs-6">
      {{t 'items.all'}}
    </div>

    <div class="col-xs-6 text-right">
      {{#link-to 'admin.item.new' class='btn btn-success'}}
        {{t 'item.new'}} {{fa-icon 'plus'}}
      {{/link-to}}
    </div>
  </div>
</h2>

{{ember-cli-filterable
    label=(t 'items.filterBy.label')
    placeholder=(t 'items.filterBy.placeholder')
    filterString=filterString
    filterBy=filterBy
    inputArray=attrs.items
    action="itemsFiltered"
  }}

{{x-items/table items=pagedItems sortBy=sortBy action="sortBy"}}

{{page-numbers content=pagedItems}}
