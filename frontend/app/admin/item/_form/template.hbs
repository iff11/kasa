<div class="form-group">
  <label>{{t 'item.name'}}</label>
  {{input value=heap.name placeholder=(t 'items.newName') class='form-control'}}
</div>

<div class="form-group">
  <label>{{t 'item.selling_price'}}</label>
  <div class="input-group">
    {{input value=heap.selling_price placeholder=(t 'items.newSellingPrice') class="form-control text-right"}}
    <span class="input-group-addon">{{t 'currency'}}</span>
  </div>
</div>

<div class="form-group">
  <label>{{t 'item.barcode'}}</label>
  {{input value=heap.barcode placeholder=(t 'items.newBarcode') class="form-control text-right"}}
</div>

<div class="form-group">
  <label>{{t 'item.warningThreshold'}}</label>
  <div class="input-group">
    {{input value=heap.warningThreshold placeholder=(t 'items.newWarningThreshold') class="form-control text-right"}}
    <span class="input-group-addon">{{t 'pieces'}}</span>
  </div>
</div>

<div class="checkbox">
  <label>
    {{input checked=heap.unlimited type="checkbox"}}
    {{t 'item.unlimited'}}
  </label>
</div>

<button class="btn btn-primary" {{action 'createItem'}}>
  {{fa-icon 'plus-square'}} {{t 'items.add'}}
</button>
