<table class="table table-hover">
  <thead>
    <tr>
      <th>{{t 'visit.updatedAt'}}</th>
      <th>{{t 'visit.customer'}}</th>
      <th class="text-right">{{t 'visit.total_price'}}</th>
      <th class="text-right">
        {{fa-icon icon="gift"}}
        +
        {{fa-icon icon="scissors"}}
        =
        {{t 'visit.employee_margin'}}
      </th>
    </tr>
  </thead>

  <tbody>
    {{#each model as |visit|}}
      <tr>
        <td>
          {{#link-to 'admin.visit' visit.id}}
            {{x-visit/completed visit=visit}}
            {{date-and-time visit.updatedAt 'cs'}}
          {{/link-to}}
        </td>
        <td>
          {{#link-to 'admin.customer' visit.customer}}
            {{visit.customer.full_name}}
          {{/link-to}}
        </td>
        <td class="text-right">{{format-money visit.total_price symbol=(t 'currency') format="%v %s"}}</td>
        <td class="text-right">
          {{format-money visit.employeeShareSale symbol=(t 'currency') format="%v %s"}}
          +
          {{format-money visit.employeeShareService symbol=(t 'currency') format="%v %s"}}
          =
          {{format-money visit.employee_share symbol=(t 'currency') format="%v %s"}}
        </td>
      </tr>
    {{/each}}
  </tbody>

  <tfoot>
    <tr>
      <td colspan="2"></td>
      <td class="text-right">
        {{x-visits/sum visits=model}}
      </td>
      <td class="text-right">
        {{x-visits/employee-share visits=model}}
      </td>
    </tr>
  </tfoot>
</table>
