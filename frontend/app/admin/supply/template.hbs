<h2>
  <div class="row">
    <div class="col-xs-6">
      {{t 'supply.heading'}}
    </div>

    <div class="col-xs-6 text-right">
      {{#link-to 'admin.item.new' class='btn btn-success'}}
        {{t 'item.new'}} {{fa-icon 'plus'}}
      {{/link-to}}
    </div>
  </div>
</h2>

<div class="jumbotron col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">

  <div class="form-group">
    <label>{{t 'supply.item'}}</label>
    {{ember-selectize
        content=attrs.items
        optionValuePath="content"
        optionLabelPath="content.scanner_string"
        selection=heap.item
        placeholder=(t 'supply.item') }}
  </div>

  <div class="form-group">
    <label>{{t 'supply.quantity'}}</label>
    <div class="input-group">
      {{input placeholder=(t 'supply.quantity') value=attrs.newSupply.quantity class='form-control text-right' type='number'}}
      <span class="input-group-addon">{{t 'pieces'}}</span>
    </div>
  </div>

  <div class="form-group">
    <label>{{t 'supply.purchase_price'}}</label>
    <div class="input-group">
      {{input placeholder=(t 'supply.purchase_price') value=attrs.newSupply.purchase_price class='form-control text-right' type='number'}}
      <span class="input-group-addon">{{t 'currency'}}</span>
    </div>
  </div>

  <div class="form-group">
    <label>{{t 'item.sellingPrice'}}</label>
    <div class="input-group">
      {{input value=attrs.newSupply.item.sellingPrice class='form-control text-right' type='number'}}
      <span class="input-group-addon">{{t 'currency'}}</span>
    </div>
  </div>

  <div class="form-group">
    <label>{{t 'supply.vat'}}</label>
    <div class="input-group">
      {{input placeholder=(t 'supply.vat') value=attrs.newSupply.vat disabled='true' class='form-control text-right' type='number'}}
      <span class="input-group-addon">%</span>
    </div>
  </div>

  <div class="form-group">
    <label>{{t 'item.margin'}}</label>
    <div class="input-group">
      {{input value=heap.item.margin disabled=true class='form-control text-right'}}
      <span class="input-group-addon">%</span>
    </div>
  </div>

  <button {{action "createSupply"}} class="btn btn-primary">
    {{t 'supply.create'}}
  </button>
</div>
