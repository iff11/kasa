<h2>
  <div class="row">
    <div class="col-xs-6">
      {{t 'supply.heading'}}
    </div>

    <div class="col-xs-6 text-right">
      {{#link-to 'admin.item.new' class='btn btn-success'}}
        {{t 'item.new'}} {{fa-icon icon="plus"}}
      {{/link-to}}
    </div>
  </div>
</h2>

<div class="admin-supply">

  <div class="form-group admin-supply-item">
    <label>{{t 'supply.item'}}</label>
    {{ember-selectize
        content=activeItems
        optionValuePath="content"
        optionLabelPath="content.scannerString"
        selection=heap.item
        placeholder=(t 'supply.item') }}
  </div>

  <div class="form-group admin-supply-quantity">
    <label>{{t 'supply.quantity'}}</label>
    <div class="input-group">
      {{input placeholder=(t 'supply.quantity') value=attrs.newSupply.quantity class='form-control text-right' type='number'}}
      <span class="input-group-addon">{{t 'pieces'}}</span>
    </div>
  </div>

  <div class="form-group admin-supply-purchase-price">
    <label>{{t 'supply.purchasePrice'}}</label>
    <div class="input-group">
      {{input placeholder=(t 'supply.purchasePrice') value=attrs.newSupply.purchasePrice class='form-control text-right' type='number'}}
      <span class="input-group-addon">{{t 'currency'}}</span>
    </div>
  </div>

  <div class="form-group admin-supply-selling-price">
    <label>{{t 'item.sellingPrice'}}</label>
    <div class="input-group">
      {{input value=attrs.newSupply.item.sellingPrice class='form-control text-right' type='number'}}
      <span class="input-group-addon">{{t 'currency'}}</span>
    </div>
  </div>

  <div class="form-group admin-supply-vat">
    <label>{{t 'supply.vat'}}</label>
    <div class="input-group">
      {{input placeholder=(t 'supply.vat') value=attrs.newSupply.vat disabled='true' class='form-control text-right' type='number'}}
      <span class="input-group-addon">%</span>
    </div>
  </div>

  <div class="form-group admin-supply-margin">
    <label>{{t 'item.margin'}}</label>
    <div class="input-group">
      {{input value=heap.item.margin disabled=true class='form-control text-right'}}
      <span class="input-group-addon">%</span>
    </div>
  </div>

  <button {{action "createSupply"}} class="btn btn-primary">
    {{t 'supply.create'}}
  </button>
</div>
