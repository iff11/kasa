<h2>{{t 'items.all'}}</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>{{t 'item.name'}}</th>
      <th class="text-right">{{t 'item.stock'}}</th>
      <th class="text-right">{{t 'item.default_price'}}</th>
    </tr>
  </thead>

  <tbody>
    {{#each item in attrs.items}}
      <tr>
        <td>{{item.name}}</td>
        <td class="text-right">
          {{#if item.unlimited}}
            &#8734;
          {{else}}
            {{item.stock}}
          {{/if}}
        </td>
        <td class="text-right">
          {{x-price value=item.default_price}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
