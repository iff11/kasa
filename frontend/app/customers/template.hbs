<h2>{{t 'customers.all'}}</h2>

<table class='table'>
  <thead>
    <tr>
      <th class="col-xs-3">{{t 'customer.full_name'}}</th>
      <th class="col-xs-2">{{t 'customer.birth'}}</th>
      <th class="col-xs-2 text-right">
        {{fa-icon "caret-down"}}
        {{t 'customer.birthday_in'}}
      </th>
      <th class="col-xs-5">{{t 'customer.note'}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each customer in pagedContent}}
      <tr>
        <td>
          {{#link-to 'customer' customer}}
            {{customer.full_name}}
          {{/link-to}}
        </td>
        <td>
          {{customer.birth}}
        </td>
        <td class="text-right">
          {{x-customer/birthday customer=customer}}
        </td>
        <td>
          {{customer.note}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{page-numbers content=pagedContent}}
